<xml>

    <!-- For a more in depth guide: https://github.com/snowkit/hxcpp-guide -->

    <files id='haxe'>

        <!-- add files and flags to the haxe c++ build -->

        <compilerflag value='-I${LINC_DISCORD_RPC_PATH}/linc/'/>
        <file name='${LINC_DISCORD_RPC_PATH}linc/linc_discord_rpc.cpp' />

    </files>

    <target id="haxe">

        <!-- add linker flags to the haxe build output -->
        <section if="linux">
            <lib name='${LINC_DISCORD_RPC_PATH}lib/discord-rpc/lib/linux64/libdiscord-rpc.a' if='HXCPP_M64'/>
            <lib name='${LINC_DISCORD_RPC_PATH}lib/discord-rpc/lib/linux/libdiscord-rpc.a' if='HXCPP_M32'/>
        </section>

        <section if="windows">
            <lib name='${LINC_DISCORD_RPC_PATH}lib/discord-rpc/lib/windows64/discord-rpc.lib' if='HXCPP_M64'/>
            <lib name='${LINC_DISCORD_RPC_PATH}lib/discord-rpc/lib/windows/discord-rpc.lib' if='HXCPP_M32'/>
        </section>

    </target>
    
</xml>
